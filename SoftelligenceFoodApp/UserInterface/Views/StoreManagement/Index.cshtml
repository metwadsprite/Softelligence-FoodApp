@model IEnumerable<Store>

@{
    ViewData["Title"] = "Index";
}


<h1>Restaurants Management</h1>

<a class="nav-link text-dark" asp-area="" asp-controller="StoreManagement" asp-action="Add">Add Restaurant</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Menu.Hyperlink)
        </th>
    </tr>
    @foreach (var item in Model)
    {   

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.Hyperlink)
            </td>
            <td>
                @Html.ActionLink("Update", "Update", "StoreManagement", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", "StoreManagement", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>


