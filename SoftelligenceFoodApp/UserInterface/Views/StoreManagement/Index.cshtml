@model IEnumerable<StoreVM>

@{
    ViewData["Title"] = "Index";
}


<h1>Restaurants Management</h1>

<form asp-area="" asp-controller="StoreManagement" asp-action="Add" method="get">
    <button type="submit" style="width:20%" class="btn btn-primary btn-lg btn-block">Add Restaurant</button>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hyperlink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
    </tr>
    @foreach (var item in Model)
    {   

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.Hyperlink)">@Html.DisplayFor(modelItem => item.Hyperlink)</a>
            </td>
            <td>
                <img class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.Image)"/>
            </td>
            <td>
                @Html.ActionLink("Update", "Update", "StoreManagement", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", "StoreManagement", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>


