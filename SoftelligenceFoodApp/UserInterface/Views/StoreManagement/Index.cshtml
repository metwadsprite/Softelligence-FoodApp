@model IEnumerable<StoreVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Restaurants Management</h1>

<a class="nav-link text-dark" asp-area="" asp-controller="StoreManagement" asp-action="Add">Add Restaurant</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hyperlink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hyperlink)
            </td>
            <td>
                <img class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.Image)"/>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

