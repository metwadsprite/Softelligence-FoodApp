@model PlaceRestaurantOrderVM

@{
    ViewData["Title"] = "ModifyOrder";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="row padding-text"><br /><h4>Your Order Content :</h4></div>
            <div>
                <pre>
    Restaurant: @Html.DisplayFor(itemModel => Model.StoreName)
    Option: @Html.DisplayFor(itemModel => Model.Order.Option)
    Price: @Html.DisplayFor(itemModel => Model.Order.Price)
                </pre>
            </div>
        </div>
        <div class="col-md-4">
            <input type="hidden" asp-for="StoreName" />
            <h4>Change your order</h4>
            <form asp-action="ModifyOrder" method="post" asp-controller="Order">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Order.Option" class="control-label"></label>
                    <input asp-for="Order.Option" class="form-control" />
                    <span asp-validation-for="Order.Option" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Order.Price" class="control-label"></label>
                    <input asp-for="Order.Price" class="form-control" />
                    <span asp-validation-for="Order.Price" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block btn-order">Change Order</button>
            </form>

            <form asp-action="DeleteOrder" method="post" asp-controller="Order">
                <button type="submit" class="btn btn-primary btn-lg btn-block btn-order">Cancel Order</button>
            </form>

            <form asp-action="GetHistory" method="post" asp-controller="Order">
                <button type="submit" class="btn btn-primary btn-lg btn-block btn-order">Order History</button>
            </form>

        </div>
    </div>
</div>