@model Order

@{
    ViewData["Title"] = "ModifyOrder";
}


<div class="row top-buffer">
    <div class="col-md-4 top-buffer">
        <div class="row padding-text"><br /><h2>Your Order Content :</h2></div>
        <form asp-action="ModifyOrder" method="post" asp-controller="Order">
            <input type="hidden" asp-for="Store.Name" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Change Order</button>
        </form>
    </div>
    <div class="col-md-4 top-buffer">
        <form asp-action="DeleteOrder" method="post" asp-controller="Order">
            <div class="textRight"><br /><h4>Changed your mind?</h4></div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Delete Order</button>
        </form>
    </div>
</div>