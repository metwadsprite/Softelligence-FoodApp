@model PlaceRestaurantOrderVM

@{
    ViewData["Title"] = "PlaceRestaurantOrder";
}

    <h1>@Html.DisplayNameFor(modelItem => Model.OrderStore.Name);</h1>

    <div>Menu</div>


    <!--Zoom effect-->
    <div class="view overlay zoom">
        <img src="@Url.Content(Model.OrderStore.Menu.Image)" class="img-fluid " alt="smaple image">
        <div class="mask flex-center">
            <p class="white-text">Zoom effect</p>
        </div>
    </div>

    <div>Your Options</div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="YourOptions">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Option" class="control-label"></label>
                    <input asp-for="Option" class="form-control" />
                    <span asp-validation-for="Option" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>

    <form asp-controller="Order" asp-action="PlaceOrder" method="get">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Place Order</button>
    </form>