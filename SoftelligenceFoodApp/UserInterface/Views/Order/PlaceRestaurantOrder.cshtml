@model PlaceRestaurantOrderVM

@{
    ViewData["Title"] = "PlaceRestaurantOrder";
}


<h2>@Html.DisplayFor(modelItem => Model.StoreName) </h2>


<div class="container-fluid">
    <div class="row padding-top">
        <div class="col-md-4">
            <div class="row"><br /><h4>Your order:</h4></div>
            <form asp-action="PlaceOrder" method="post" asp-controller="Order">
                <input type="hidden" asp-for="StoreName" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Option" class="control-label"></label>
                    <input asp-for="Option" class="form-control" name="ProductName" />
                    <span asp-validation-for="Option" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" name="ProductPrice" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Place Order</button>
            </form>
        </div>
        <div class="col-md-4">
            <div class="row">
                <h4>Previous orders on this restaurant:</h4>
            </div>
            <div class="row">
                <!-- Here be select code -->
                <select class="js-example-basic-single" name="state">
                    <option value="AL">Alabama</option>
                    <option value="WY">Wyoming</option>
                </select>
            </div>
            <div class="row"><br /><h4>Menu Image:</h4></div>
            <div class="view overlay zoom">
                <img src="@Html.DisplayFor(modelItem => Model.Image)" class="img-fluid " alt="sample image">
            </div>
            <div>
                <div class="row"><br /><h4>Menu Link:</h4></div>
                <a href="@Html.DisplayFor(modelItem => Model.Hyperlink)">@Html.DisplayFor(modelItem => Model.Hyperlink)</a>
            </div>
        </div>
    </div>
</div>