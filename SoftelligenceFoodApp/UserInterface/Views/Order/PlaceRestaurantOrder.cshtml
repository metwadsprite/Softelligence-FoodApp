@model PlaceRestaurantOrderVM

@{
    ViewData["Title"] = "PlaceRestaurantOrder";
}


<h1> @Html.DisplayFor(modelItem => Model.StoreName) </h1>



<div class="row">
    <div class="col-md-4">
        <h4><div class="row"><br />Your Order Content :</div></h4>
        <form asp-action="PlaceOrder" method="post" asp-controller="Order">
            <input type="hidden" asp-for="StoreName" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Option" class="control-label"></label>
                <input asp-for="Option" class="form-control" />
                <span asp-validation-for="Option" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Place Order</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4><div class="row"><br />Menu Image:</div></h4>
        <div class="view overlay zoom">
            <img src="@Html.DisplayFor(modelItem => Model.Image)" class="img-fluid " alt="sample image">
        </div>
        <div>
            <h4><div class="row"><br />Menu Hyperlink:</div></h4>
            @Html.DisplayFor(modelItem => Model.Hyperlink)
        </div>
    </div>

</div>
